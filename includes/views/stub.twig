      <div id="post-{{ post.ID }}" class="post-{{ post.ID }} hentry stub{{ post.pinned ? ' fm-pinned' }}" data-id="{{ post.ID }}">

        <div class="column-action column-pin" width="20">
          <span class="pin-unpin">
            <a href="#" title="Pin this item" class="stub-action dashicons dashicons-admin-post"></a>
          </span>
        </div>


        <div class="column-action column-remove" width="20">
          <span class="remove">
            <a href="#" title="Remove this post from the feed" class="stub-action dashicons dashicons-no"></a>
          </span>

          <!-- Hidden Fields -->
          <span class="hidden">
            <input id="fm-sort-{{ post.ID }}" type="hidden" name="fm_sort[]" value="{{ post.ID }}">
            <input id="fm-pin-{{ post.ID }}"  class="fm-pin-checkbox" type="checkbox" name="fm_pin[{{ post.ID }}]" {{ post.pinned ? 'checked="checked"' }}>
            <input id="fm-reorder-{{ post.ID }}"  class="fm-reorder-checkbox" type="checkbox" name="fm_reorder[{{ post.ID }}]" {{ post.reordered ? 'checked="checked"' }}>
            <input id="fm-hide-{{ post.ID }}" class="fm-hide-checkbox" type="checkbox" name="fm_hide[{{ post.ID }}]" {{ post.hidden ? 'checked="checked"' }}>
          </span>
        </div>

        <div class="post-title page-title column-title">

          {% if post.thumbnail and post.thumbnail.src %}
            <img src="{{ post.thumbnail.src|resize(72, 72) }}" class="post-thumb" alt=""/>
          {% endif %}

          <strong><a class="row-title" href="{{ post.edit_link }}" title="Edit Post">{{ post.title }}</a></strong>

          <div class="date">
            <abbr title="{{ post.post_date }}">{{ function('human_time_diff', function('strtotime', post.post_date)) }} ago</abbr>

            <span class="row-actions">
              <span class="edit">
                | <a href="{{ post.edit_link }}" title="Edit this item">Edit</a> | 
              </span>

              <span class="view">
                <a href="{{ post.link }}" title="View Post" rel="permalink">View</a>
              </span>
            </span>
          </div>
        </div>
      </div>
