<div class="sm-alert"></div>

<div class="sm-posts" data-ids="{{ post_ids }}" data-pinned="{{ post_pinned }}">
    {% set j = 0 %}

    {% for post in posts %}

      {% for zone in layout.zones %}
        {% if zone.position == j %}
          {% include ["meta.twig", "views/meta.twig"] %}
          {% set j = j + 1 %}
        {% endif %}
      {% endfor %}

      {% include ["stub.twig", "views/stub.twig"] %}

      {% set j = j + 1 %}

    {% endfor %}


    {% for post in stubs %}
      {% for zone in layout.zones %}
        {% if zone.position == j %}
          {% include ["meta.twig", "views/meta.twig"] %}
          {% set j = j + 1 %}
        {% endif %}
      {% endfor %}

      {{post}}

      {% set j = j + 1 %}

    {% endfor %}

</div>

{{ nonce }}
